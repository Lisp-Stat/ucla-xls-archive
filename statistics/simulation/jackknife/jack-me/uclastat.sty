% statistics macros

\def\ModC#1#2{f(#1\mid #2)}             % parametric model, discrete case
\def\ModD#1#2{\pi_#1(#2)}               % parametric model, continuous case

\def\ScoD#1#2{\bigl({{                  % score function, discrete case
    \partial\log \ModD{#1}{#2}}\over{   % score function, discrete case
    \partial #2}}\bigr)_{#2=#2_0}}      % score function, discrete case

\def\ScoC#1#2{\bigl({{                  % score function, continuous case
    \partial\log \ModC{#1}{#2}}\over{   % score function, continuous case
    \partial #2}}\bigr)_{#2=#2_0}}      % score function, continuous case

\def\InfD#1#2{\sum_{#1=1}^m             % Fisher information, discrete case
    \bigl[\ScoD{#1}{#2}                 % Fisher information, discrete case
    \ScoD{#1}{#2}^\prime                % Fisher information, discrete case
    \bigr]\ \ModD{#1}{#2}_0}            % Fisher information, discrete case

\def\InfC#1#2{\intf                     % Fisher information, continuous case
    \bigl[\ScoC{#1}{#2}                 % Fisher information, continuous case
    \ScoC{#1}{#2}^\prime                % Fisher information, continuous case
    \bigr]\ \ModC{#1}{#2}_0\ d#1}       % Fisher information, continuous case

